<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.TaskEditPage"
             Title="Edit Task">
  <StackLayout Padding="10">
    <Entry x:Name="TitleEntry" Placeholder="Task Title" Text="{Binding Title}" />
    <Editor x:Name="DescriptionEditor" Placeholder="Task Description" Text="{Binding Description}" />
    <Button Text="Save Changes" Clicked="SaveButton_Clicked" />
  </StackLayout>
</ContentPage>